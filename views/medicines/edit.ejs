<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Medicine</h1>
        <div class="col-6 offset-3">
            <form action="/medicines/<%=medicine._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="medicine[title]"
                        value="<%=medicine.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="medicine[image]"
                        value="<%=medicine.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="medicine[price]" value="<%=medicine.price %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="medicine[description]"><%= medicine.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Medicine</button>
                </div>
            </form>
            <a href="/medicines/<%= medicine._id%>">Back To Medicine</a>

        </div>
    </div>