<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New medicine</h1>
        <div class="col-6 offset-3">
            <form action="/medicines" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="medicine[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="medicine[location]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="medicine[image]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">medicine Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="medicine[price]">
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Add medicine</button>
                </div>
            </form>
            <a href="/medicines">All medicines</a>
        </div>
    </div>